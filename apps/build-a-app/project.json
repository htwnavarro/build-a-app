{
  "name": "build-a-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/build-a-app/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project build-a-app --web",
  "targets": {
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "options": {
        "buildTarget": "build-a-app:build:development",
        "open": true
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "options": {
        "webpackConfig": "apps/build-a-app/webpack.config.js",
        "index": "apps/build-a-app/src/index.html",
        "outputPath": "dist/apps/build-a-app",
        "assets": [
          "apps/build-a-app/src/favicon.ico",
          "apps/build-a-app/src/assets"
        ]
      }
    }
  }
}
